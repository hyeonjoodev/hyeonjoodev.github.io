{
  "name": "github-page",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "homepage": "https://hyeonjoodev.github.io",
  "scripts": {
    "dev": "vite",
    "dev:node": "node server",
    "deploy": "npm run build:client && cp dist/index.html dist/404.html && gh-pages -d dist",
    "build": "npm run build:client && npm run build:server",
    "build:client": "vite build --outDir ./dist",
    "build:server": "vite build --ssr src/entry-server.js --outDir /dist/server",
    "preview": "cross-env NODE_ENV=production node server"
  },
  "dependencies": {
    "compression": "^1.7.5",
    "express": "^5.0.1",
    "gh-pages": "^6.2.0",
    "sirv": "^3.0.0",
    "vue": "^3.5.13",
    "vue-router": "^4.4.5"
  },
  "devDependencies": {
    "@vitejs/plugin-vue": "^5.2.1",
    "cross-env": "^7.0.3",
    "vite": "^6.0.1",
    "vite-plugin-markdown": "^2.2.0",
    "vuepress": "^1.9.10"
  }
}
